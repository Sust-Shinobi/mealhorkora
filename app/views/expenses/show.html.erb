<% unless @expenses.nil? %>
<h2>Expenses</h2>
<table style="width:100%" class="table">

    <tr>
        <th>Year</th>
        <th>Month</th>
        <th>Day</th>
        <th>Item</th>
        <th>Cost</th>
    </tr>

    <% @expenses.each do |expense| %>
    <tr>
        <td><%= expense.year %></td>
        <td><%= expense.month %></td>
        <td><%= expense.day %></td>
        <td><%= expense.item %></td>
        <td><%= expense.cost %></td>
    </tr>
    <% end %>

</table>
<% end %>