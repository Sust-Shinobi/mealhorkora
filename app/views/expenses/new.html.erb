<% provide(:title,"Add Expense") %>
<%= form_for(:expenses,url:add_expense_path) do |f| %>

  <%= f.date_select :date,
                    prompt: { year: 'Select Year', month: 'Select Month', day: 'Select Day'},
                    start_year: Time.now.year-3,
                    end_year: Time.now.year,
                    html_options: {class: "SelectDropDown"} %>
  <br/>
<%= f.label :item %>
<%= f.text_field :item, class: 'form-control' %>

<%= f.label :quantity %>
<%= f.text_field :quantity, class: 'form-control' %>

<%= f.label :cost %>
<%= f.text_field :cost, class: 'form-control' %>

<%= f.submit "Add", action: "create", class: 'btn btn-primary' %>
<% end %>