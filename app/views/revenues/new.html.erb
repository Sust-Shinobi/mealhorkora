<h2>Revenue</h2>
<table class="table table-bordered ">
    <thead align="left">
    <tr>
        <th rowspan="3">Year</th>
        <th colspan="3">1st Quarter</th>
        <th colspan="3">2nd Quarter</th>
        <th colspan="3">3rd Quarter</th>
        <th colspan="3">4th Quarter</th>
        <th colspan="3">Total</th>
    </tr>
    <tr>
        <th>Expenses</th>
        <th>Sales</th>
        <th>Net Income</th>
        <th>Expenses</th>
        <th>Sales</th>
        <th>Net Income</th>
        <th>Expenses</th>
        <th>Sales</th>
        <th>Net Income</th>
        <th>Expenses</th>
        <th>Sales</th>
        <th>Net Income</th>
        <th>Expenses</th>
        <th>Sales</th>
        <th>Net Income</th>
    </tr>
    </thead>
    <% (2014..Time.now.year).each do |year| %>
        <tr>
        <td><%= year %></td>
        <% (1..4).each do |quarter| %>        
            <td><%= exp = get_expenses_quarter(year,quarter) %></td>
            <td><%= sale = get_sales_quarter(year,quarter) %></td>
            <td><%= sale - exp %></td>
        <% end %>
            <td><%= exp = get_expenses_year(year) %></td>
            <td><%= sale = get_sales_year(year) %></td>
            <td><b><i><%= sale - exp %></i></b></td>
        </tr>
    <% end %>
</table>