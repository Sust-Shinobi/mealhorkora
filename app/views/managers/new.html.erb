<% provide(:title,"Managers Panel") %>
<h1>Managers Panel</h1>
<div class="row">
  <div class="users">
    <ul>
      <% @users.each do |user| %>
      <% if user.superuser? %>
        <li><%= link_to gravatar_for user, size: 50 %>
          <%= link_to user.name, user %>
          <% if !current_user?(user) %>
            <h5>(<%= link_to "remove", managers_panel_path(user,:id => user.id), method: :post,
                             data: {confirm: "Are you sure you want to remove "+user.name+
                                 " from the managers panel?"} %>)</h5>
          <% end %>
      <% end %>
      </li>
      <br/>
      <% end %>
    </ul>
</div>
</div>